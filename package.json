{
  "name": "keyword-colorizer",
  "displayName": "Keyword Colorizer",
  "description": "Highlight specific keywords with custom colors",
  "version": "0.0.2",
  "publisher": "keyword-colorizer",
  "engines": {
    "vscode": "^1.107.0"
  },
  "icon": "images/kc-icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/marietta-a/keyword-colorizer.git"
  },
  "bugs": {
    "url": "https://github.com/marietta-a/keyword-colorizer/issues"
  },
  "homepage": "https://github.com/marietta-a/keyword-colorizer#readme",
  "contributes": {
    "configuration": {
      "title": "Keyword Colorizer",
      "properties": {
        "keywordColorizer.styles": {
          "type": "array",
          "description": "Add keywords here to override the defaults.",
          "items": {
            "type": "object",
            "properties": {
              "keyword": {
                "type": "string",
                "description": "Select a keyword",
                "enum": [
                  "function", "class", "interface", "type", "enum", "struct", "namespace", "module",
                  "new", "constructor", "get", "set", "extends", "implements", "this", "super",
                  "return", "throw", "break", "continue", "yield", "debugger", "goto", "delete",
                  "if", "else", "switch", "case", "default", "for", "while", "do", "with",
                  "try", "catch", "finally",
                  "const", "let", "var", "static", "final", "readonly", "volatile",
                  "import", "export", "from", "as", "package", "require", "using",
                  "public", "private", "protected", "abstract", "native", "synchronized",
                  "async", "await",
                  "true", "false", "null", "undefined", "void",
                  "int", "float", "double", "char", "byte", "short", "long", "boolean", "string",
                  "any", "unknown", "never", "typeof", "instanceof", "in", "of"
                ]
              },
              "color": {
                "type": "string",
                "description": "Hex Color",
                "format": "color-hex",
                "default": "#FF0000"
              },
              "isBold": {
                "type": "boolean",
                "default": false
              }
            }
          },
          "default": [ ] 
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "typescript-eslint": "^8.18.0",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}